<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="Cabinet.controller.AjouterModifierQuestionsController">
    <GridPane hgap="10" vgap="10">
        <TextField fx:id="enonceField" promptText="Énoncé" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Énoncé" GridPane.columnIndex="0" GridPane.rowIndex="0" />

        <ChoiceBox fx:id="typeChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Type" GridPane.columnIndex="0" GridPane.rowIndex="1" />

        <TextArea fx:id="propositionsArea" prefRowCount="5" promptText="Propositions (séparées par #)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Propositions" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="saveButton" text="Sauvgarder" />
        <Button fx:id="cancelButton" text="Annuler" />
    </HBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
